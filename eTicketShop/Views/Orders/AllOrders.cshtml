@model List<Order>
@{
    ViewData["Title"] = "All Orders";
}

<h1>All Orders</h1>

<p>

</p>
<table class="table  table-hover">
    <thead>

        <tr>
            <th>User</th>
            <th>Qty /Price/ Event </th>
         
            <th>Total Price</th>
            <th>Paid Date</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var order in Model)
        {
            <tr>
                <td class="align-middle">@order.User.FullName</td>
                <td class="align-middle">
                    <ul style="list-style-type:none">
                       @foreach (var item in order.OrderItems)
                        {
                            <li>
                                
                                    <span class="badge bg-success">@item.Qty</span> @item.Price.ToString("c")  - @item.Event.Name
                            
                            </li>
                        }

                    </ul>
                </td>
                <td class="align-middle">@order.TotalPrice</td>
                <td class="align-middle">@order.PaidDateTime</td>
            </tr>
        }
    </tbody>
</table>
